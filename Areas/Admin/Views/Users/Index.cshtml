@model IEnumerable<WebApplication12.Models.ViewModels.UserViewModel>

@{
    ViewBag.Title = "behzad Index";
}

<h2>Behzad List</h2>

<p>
    @Html.ActionLink("behzad modifd Create New", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MobileNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MobileNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegisterDate)
            </td>
            <td>
                <!-- condition -->
                @if (item.IsActive == "true")
                {
                    <span>
                        Active
                    </span>
                }
                else
                {
                    <span>
                        Deactive
                    </span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("behzad Edit", "Edit", new { id = item.UserId }, new { @class = "btn btn-warning" }) |
                @Html.ActionLink("behzad Details", "Details", new { id = item.UserId }, new { @class = "btn btn-info" }) |
                @Html.ActionLink("behzad Delete", "Delete", new { id = item.UserId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
