@model WebApplication12.Models.ViewModels.NewsGroupViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm("Edit", "NewsGroups", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(Model => Model.NewsGroupId) <!-- hidden mikonim bar migardunim -->
    @Html.HiddenFor(Model => Model.ImageName) <!-- hidden mikonim ke to back file ghabli ro delete konim -->

    <div class="form-horizontal">
        <h4>NewsGroup</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NewsGroupId)

        <div class="form-group">
            @Html.LabelFor(model => model.NewsGroupTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NewsGroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NewsGroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ImageName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <img src="~/Images/News-Groups/@Model.ImageName" class="img60x60" id="imgPrev" />      <!-- id ro o js lazem darim -->
                <!-- name= ,ShowPreview(this), #ref1 -->
                <input type="file" id="imgupload" name="imgUpload" onchange="ShowPreview(this)" accept="image/*" /> <!-- (this) => lowercase -->
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/myScript.js"></script>           <!-- ezafe mikonim, script khodam hast -->
}
